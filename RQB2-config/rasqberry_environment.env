# RasQberry environment variables
# used in our bash scripts and python
# Order: LED config → Display/Interface → Demo loop → Demo status → System → Demo-specific

# =============================================================================
# 1. LED CONFIGURATION (most commonly adjusted by users)
# =============================================================================

# Number of LED pixels (4*4*12 = 192, supports 1000+ LEDs with PWM/PIO drivers)
LED_COUNT=192
# GPIO pin connected to the pixels (GPIO18 for both Pi4 PWM and Pi5 PIO)
LED_GPIO_PIN=18
# LED Pixel Order: RGB, GRB, RGBW, GRBW (most WS2812B LEDs use GRB)
LED_PIXEL_ORDER=GRB
# LED Default Brightness (0.0-1.0, where 1.0 is maximum)
LED_DEFAULT_BRIGHTNESS=0.4

# LED Matrix Layout: single (8x24 serpentine), quad (4x 4x12 panels)
LED_MATRIX_LAYOUT=single
LED_MATRIX_WIDTH=24
LED_MATRIX_HEIGHT=8
# Y-axis flip for single layout (true if matrix is physically upside down)
LED_MATRIX_Y_FLIP=false
# Quad Panel Configuration (used when LED_MATRIX_LAYOUT=quad)
# Four 4x12 panels wired: Top-Left → Top-Right → Bottom-Right → Bottom-Left
LED_MATRIX_PANEL_WIDTH=12
LED_MATRIX_PANEL_HEIGHT=4

# Qubit count (typically matches LED_COUNT: 4*4*12 = 192)
N_QUBIT=192

# Advanced LED settings (rarely need changing)
LED_FREQ_HZ=800000
LED_DMA=10
LED_INVERT=false
LED_CHANNEL=0
LED_CHUNK_SIZE=8
LED_CHUNK_DELAY_MS=8

# =============================================================================
# 2. DISPLAY/INTERFACE SETTINGS
# =============================================================================

# Touch Mode: Enable touch-friendly interface (larger buttons, on-screen keyboard)
# Values: true/false (managed by rq_touch_mode.sh)
TOUCH_MODE_ENABLED=false

# Touch mode customization (sizes applied when touch mode is enabled)
# Adjust these values for different screen sizes or preferences
TOUCH_PANEL_HEIGHT=64
TOUCH_PANEL_ICON_SIZE=48
TOUCH_DESKTOP_ICON_SIZE=72
TOUCH_DESKTOP_GRID_SPACING=140
TOUCH_TERMINAL_FONT_SIZE=16
TOUCH_DOUBLE_CLICK_MS=500

# =============================================================================
# 3. DEMO LOOP CONFIGURATION (for conference showcases)
# =============================================================================

DEMO_LOOP_IBM_LOGO_TIME=15
DEMO_LOOP_LIGHTS_OUT_TIME=60
DEMO_LOOP_RASQBERRY_TIE_TIME=60
DEMO_LOOP_RASQ_LED_TIME=60
DEMO_LOOP_PAUSE=2

# =============================================================================
# 4. DEMO INSTALLATION STATUS
# =============================================================================

TEST_LED_INSTALLED=false
QUANTUM_LIGHTS_OUT_INSTALLED=false
QUANTUM_RASPBERRY_TIE_INSTALLED=false
GROK_BLOCH_INSTALLED=false
QUANTUM_FRACTALS_INSTALLED=true
LED_PAINTER_INSTALLED=false
QOFFEE_MAKER_INSTALLED=false
QUANTUM_MIXER_INSTALLED=false
FUN_WITH_QUANTUM_INSTALLED=false

# =============================================================================
# 5. ADVANCED/SYSTEM VARIABLES (rarely need changing)
# =============================================================================

# Hardware Detection (auto-detected at boot by rq_detect_hardware.sh)
PI_MODEL=Pi5

# Repository configuration
REPO=RasQberry-Two
RQB_GIT_USER=JanLahmann
STD_VENV=RQB2

# Interactive mode settings
INTERACTIVE=true
ASK_TO_REBOOT=0
CONFIG=/boot/config.txt
RQ_NO_MESSAGES=false

# OS version (set during build)
OS_VERSION=none

# =============================================================================
# 6. DEMO-SPECIFIC CONFIGURATION (Git repositories, markers, ports)
