{
  "id": "grok-bloch",
  "name": "Grokking the Bloch Sphere",
  "category": "visualization",
  "description": "Interactive Bloch sphere visualization for understanding qubit states",
  "keywords": ["quantum", "bloch", "sphere", "visualization", "qubit", "state"],

  "entrypoint": {
    "type": "browser",
    "working_dir": "grok-bloch",
    "launcher": "rq_grok_bloch_auto.sh"
  },

  "install": {
    "preinstalled": false,
    "repo_url": "https://github.com/JavaFXpert/grok-bloch.git",
    "marker_file": "index.html"
  },

  "needs_hw": {
    "leds": false,
    "display": "required"
  },
  "needs_ibm_token": "none",
  "browser_based": true,
  "loop_ok": false,
  "timeout": 0,

  "icon": {
    "type": "custom",
    "path": "/usr/share/icons/rasqberry/orbit-pi.png"
  },

  "menu": {
    "show": true,
    "order": 30
  },

  "desktop": {
    "show": true,
    "terminal": true
  },

  "variants": [
    {
      "id": "local",
      "name": "Local (offline)",
      "entrypoint": {
        "type": "browser",
        "launcher": "rq_grok_bloch_auto.sh"
      }
    },
    {
      "id": "web",
      "name": "Web Version",
      "entrypoint": {
        "type": "browser",
        "browser_url": "https://javafxpert.github.io/grok-bloch/"
      },
      "needs_hw": {"network": true}
    }
  ]
}
