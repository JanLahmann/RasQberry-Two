{
  "id": "ibm-courses",
  "name": "IBM Quantum Courses",
  "category": "jupyter",
  "description": "Official IBM Quantum learning courses from Qiskit documentation (CC BY-SA 4.0)",
  "keywords": ["quantum", "jupyter", "notebook", "ibm", "qiskit", "course", "education"],

  "entrypoint": {
    "type": "jupyter",
    "working_dir": "ibm-quantum-learning/courses",
    "jupyter_port": 8890,
    "launcher": "rq_ibm_courses.sh"
  },

  "install": {
    "preinstalled": false,
    "repo_url": "https://github.com/Qiskit/documentation.git",
    "marker_file": "WELCOME-courses.ipynb"
  },

  "needs_hw": {
    "leds": false,
    "display": "required"
  },
  "needs_ibm_token": "prefer",
  "browser_based": true,
  "loop_ok": false,
  "timeout": 0,

  "icon": {
    "type": "system",
    "path": "applications-education"
  },

  "menu": {
    "show": true,
    "order": 55
  },

  "desktop": {
    "show": true,
    "terminal": true
  }
}
