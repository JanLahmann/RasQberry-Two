IMG_NAME=rasqberry
# Note: IMG_FILENAME will be set dynamically by the GitHub Actions workflow
# based on the VERSION file (for versioned builds) or defaults to IMG_NAME
# Format: rasqberry-v{version} (main), rasqberry-beta-{date} (beta),
#         rasqberry-{branch}-{date}-{time} (dev branches)
RELEASE=bookworm
DEPLOY_COMPRESSION=xz
# Development: Fast compression for quick iteration
COMPRESSION_LEVEL=3
# Production: Maximum compression for releases
COMPRESSION_LEVEL_PROD=9
# AB image compression level
AB_COMPRESSION_LEVEL=3
# Production AB compression level
AB_COMPRESSION_LEVEL_PROD=9
LOCALE_DEFAULT=en_GB.UTF-8
TARGET_HOSTNAME=rasqberry
KEYBOARD_KEYMAP=gb
KEYBOARD_LAYOUT="English (UK)"
TIMEZONE_DEFAULT=Europe/London
FIRST_USER_NAME=rasqberry
FIRST_USER_PASS="Qiskit1!"
ENABLE_SSH=1
DISABLE_FIRST_BOOT_USER_RENAME=1
PUBKEY_ONLY_SSH=0
WPA_COUNTRY=GB

# Build quality settings
# Development: Disable initramfs (AB boot uses direct kernel mount per official pattern)
SKIP_INITRAMFS=1
# Production: Disable initramfs (AB boot uses direct kernel mount per official pattern)
SKIP_INITRAMFS_PROD=1

# RasQberry-specific build configuration

# RQB_REPO, RQB_GIT_USER, RQB_GIT_BRANCH will be overwritten in the GH actions workflow with current repo/user/branch
# Repository name
RQB_REPO=will-be-set-in-gh-workflow
# GitHub username
RQB_GIT_USER=will-be-set-in-gh-workflow
# Branch to clone (main, beta, dev, etc.)
RQB_GIT_BRANCH=will-be-set-in-gh-workflow

# Construct the Git URL from user and repo
RQB_GIT_REPO="https://github.com/${RQB_GIT_USER}/${RQB_REPO}.git"
# Standard virtual environment name
RQB_STD_VENV=RQB2
# Configuration directory (relative to user home)
RQB_CONFDIR=.local/config
# Flag indicating build is from pi-gen
RQB_PIGEN=true

# Console configuration (will be overwritten by GH actions workflow)
# Console output type: 'hdmi' (default) or 'serial'
CONSOLE_TYPE=hdmi
# Boot verbosity: 'splash' (default) or 'verbose'
BOOT_VERBOSITY=splash
