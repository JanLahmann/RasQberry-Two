IMG_NAME=rasqberry
RELEASE=bookworm
DEPLOY_COMPRESSION=xz
COMPRESSION_LEVEL=9
LOCALE_DEFAULT=en_GB.UTF-8
TARGET_HOSTNAME=rasqberry
KEYBOARD_KEYMAP=gb
KEYBOARD_LAYOUT="English (UK)"
TIMEZONE_DEFAULT=Europe/London
FIRST_USER_NAME=rasqberry
FIRST_USER_PASS="Qiskit1!"
ENABLE_SSH=1
DISABLE_FIRST_BOOT_USER_RENAME=1
PUBKEY_ONLY_SSH=0
WPA_COUNTRY=GB

# Disable initramfs for faster builds
SKIP_INITRAMFS=1

# RasQberry-specific build configuration

# RQB_REPO, RQB_GIT_USER, RQB_GIT_BRANCH will be overwritten in the GH actions workflow with current repo/user/branch
# Repository name
RQB_REPO=will-be-set-in-gh-workflow
# GitHub username
RQB_GIT_USER=will-be-set-in-gh-workflow
# Branch to clone (main, beta, dev, etc.)
RQB_GIT_BRANCH=will-be-set-in-gh-workflow

# Construct the Git URL from user and repo
RQB_GIT_REPO="https://github.com/${RQB_GIT_USER}/${RQB_REPO}.git"
# Standard virtual environment name
RQB_STD_VENV=RQB2
# Configuration directory (relative to user home)
RQB_CONFDIR=.local/config
# Flag indicating build is from pi-gen
RQB_PIGEN=true
